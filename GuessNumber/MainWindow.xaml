<Window x:Class="GuessNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="/images/valuta.ico">
    <Grid>
        <TextBox x:Name="InputNumberTb"
                 Width="100"
                 Height="30"
                 Margin="10"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Text="сюда число"
                 FontSize="15"/>
        <Button x:Name="CheckBtn"
                Content="PROVERKA"
                Width="100"
                Height="30"
                Margin="0,200,150,0"
                Click="CheckBtn_Click"/>
        <TextBlock x:Name="HintTbl"
                   Width="250"
                   Height="30"
                   Margin="10,50,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>
        <ListBox x:Name="Historylb"
                 Width="250"
                 Height="150"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
        <TextBlock x:Name="AttemptsTbl"
                   Width="250"
                   Height="30"
                   Margin="10,250,0,0"
                   HorizontalAlignment="Left"/>
        <Button x:Name="Restartbtn"
                Content="ZANOVO"
                Width="100"
                Height="30"
                Margin="150,200,0,0"
                Click="Restartbtn_Click"/>
    </Grid>
</Window>
